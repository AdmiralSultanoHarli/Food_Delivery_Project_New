<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Edit"
        android:textColor="@color/colorBlack"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="27dp"
        android:src="@drawable/ic_account_circle_blue_100dp"
        app:civ_border_color="#ffffff"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="@color/colorBlack"
        android:layout_below="@+id/profileImage"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:text="Admiral Sultano"/>

    <TextView
        android:id="@+id/name"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:textColor="@color/colorBlack"
        android:layout_below="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="21dp"
        android:text="Name"/>

    <TextView
        android:id="@+id/nameShow"
        android:layout_below="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:text="Admiral Sultano"/>

    <View
        android:id="@+id/line"
        android:layout_below="@+id/nameShow"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:background="@color/colorBlack"/>

    <TextView
        android:id="@+id/number"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:textColor="@color/colorBlack"
        android:layout_below="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="21dp"
        android:text="Mobile Number"/>

    <TextView
        android:id="@+id/numberId"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="21dp"
        android:textSize="15dp"
        android:text="+62"
        android:layout_below="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/numberShow"
        android:layout_below="@+id/number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_toRightOf="@+id/numberId"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="21dp"
        android:text="81282323180"/>

    <View
        android:id="@+id/line2"
        android:layout_below="@+id/numberShow"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:background="@color/colorBlack"/>

    <TextView
        android:id="@+id/email"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:textColor="@color/colorBlack"
        android:layout_below="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="21dp"
        android:text="Email Address"/>

    <TextView
        android:id="@+id/emailShow"
        android:layout_below="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:text="giord2010@gmail.com"
        android:textSize="15dp"/>

    <View
        android:id="@+id/line3"
        android:layout_below="@+id/emailShow"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:background="@color/colorBlack"/>

    <TextView
        android:id="@+id/textView"
        android:layout_below="@+id/line3"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:text="Communication and transaction history from Khanaval will be sent to this email address."
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/logOutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:textSize="15dp"
        android:text="LOG OUT"
        android:textColor="@color/colorButton"/>



</RelativeLayout>