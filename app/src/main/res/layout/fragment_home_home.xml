<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/topMenu"
            android:layout_above="@+id/nav_view">

            <androidx.viewpager.widget.ViewPager
                android:foregroundGravity="center"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:layout_marginTop="5dp"
                android:id="@+id/sliderPager"
                />

            <com.google.android.material.tabs.TabLayout
                android:layout_alignParentLeft="true"
                android:layout_marginTop="0dp"
                android:id="@+id/indicator"
                app:tabBackground="@drawable/indicator_selector"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/sliderPager"
                android:layout_marginLeft="11dp"
                app:tabIndicatorHeight="0dp"/>


            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/bestCusineFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/indicator"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/todaySpecialsFragment"
                android:layout_below="@+id/bestCusineFragment"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/yourFavouritesFragment"
                android:layout_below="@+id/todaySpecialsFragment"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/customFragment"
                android:layout_below="@+id/yourFavouritesFragment"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>