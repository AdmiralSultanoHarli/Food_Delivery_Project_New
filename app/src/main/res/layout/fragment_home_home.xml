<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/topMenu"
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <TextView
            android:id="@+id/textViewMap"
            android:layout_width="168dp"
            android:layout_height="30dp"
            android:background="@drawable/rounded_shape"
            android:elevation="8dp"
            android:textSize="12sp"
            android:lines="1"
            android:textColor="@color/colorButton"
            android:text="Map Configuration"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textStyle="bold"
            />

        <ImageView

            android:id="@+id/shoppingCartButton"
            android:layout_width="24dp"
            android:clickable="true"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_shopping_cart_blue_24dp"
            android:foreground="?attr/selectableItemBackground"
            android:tint="@color/colorButton"
            />

        <TextView
            android:id="@+id/textViewExplore"
            android:layout_below="@+id/textViewMap"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorBlack"
            android:text="Explore"
            android:textSize="15sp"/>

        <!--<androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/textViewExplore"
            app:queryHint="Search"
            />-->

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_below="@id/textViewExplore"
            android:layout_width="match_parent"
            app:queryHint="Search"
            app:queryBackground="@color/colorWhite"
            app:searchIcon="@drawable/ic_search_gray_20dp"
            app:closeIcon="@drawable/ic_close_gray_20dp"
            app:searchHintIcon="@null"
            android:theme="@style/SearchViewTest"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded_shape_search"
            android:elevation="5dp"
            />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topMenu"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/topMenu"
            android:layout_above="@+id/nav_view">

            <androidx.viewpager.widget.ViewPager
                android:foregroundGravity="center"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:layout_marginTop="5dp"
                android:id="@+id/sliderPager"
                />

            <com.google.android.material.tabs.TabLayout
                android:layout_alignParentLeft="true"
                android:layout_marginTop="0dp"
                android:id="@+id/indicator"
                app:tabBackground="@drawable/indicator_selector"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/sliderPager"
                android:layout_marginLeft="11dp"
                app:tabIndicatorHeight="0dp"/>


            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/bestCusineFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/indicator"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/todaySpecialsFragment"
                android:layout_below="@+id/bestCusineFragment"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/yourFavouritesFragment"
                android:layout_below="@+id/todaySpecialsFragment"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/customFragment"
                android:layout_below="@+id/yourFavouritesFragment"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>