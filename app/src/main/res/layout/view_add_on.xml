<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/imgCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            app:cardCornerRadius="4dp">
            
            <ImageView
                android:id="@+id/orderFoodImage"
                android:layout_width="50.1dp"
                android:layout_height="50.9dp"
                android:background="@drawable/rounded_image_corner"
                android:src="@drawable/beverage"
                android:scaleType="fitXY"
                />


        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/orderFoodName"
            android:text="Rice"
            android:textSize="15dp"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgCard"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/orderFoodPrice"
            android:text="Rp 10.000,-"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgCard"
            android:layout_below="@+id/orderFoodName"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/orderButtonAddPlusMinusChart"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:background="@color/colorWhite"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            app:cardCornerRadius="4dp"
            android:elevation="5dp"
            >

            <RelativeLayout
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/orderDecreaseCartQuantity"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="-"
                    android:gravity="center"
                    android:textColor="@color/colorButton"
                    android:textSize="14dp"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/orderCartQuantity"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:layout_centerInParent="true"/>

                <TextView
                    android:id="@+id/orderIncreaseCartQuantity"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/colorButton"
                    android:textSize="14dp"
                    android:layout_alignParentRight="true"/>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>



</RelativeLayout>