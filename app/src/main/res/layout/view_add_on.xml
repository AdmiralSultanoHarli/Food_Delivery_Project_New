<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_gravity="center"
    android:id="@+id/food_add_on">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/imgCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            app:cardCornerRadius="4dp">
            
            <ImageView
                android:id="@+id/img"
                android:layout_width="50.1dp"
                android:layout_height="50.9dp"
                android:background="@drawable/rounded_image_corner"
                android:src="@drawable/beverage"
                android:scaleType="fitXY"
                />


        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/foodName"
            android:text="Rice"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgCard"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/foodPrice"
            android:text="Rp 10.000,-"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgCard"
            android:layout_below="@+id/foodName"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/buttonAddPlusMinusChart"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:background="@color/colorWhite"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            app:cardCornerRadius="4dp"
            android:elevation="5dp"
            >

            <RelativeLayout
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/decreaseChartQuantity"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="-"
                    android:gravity="center"
                    android:textColor="@color/colorButton"
                    android:textSize="14sp"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/chartQuantity"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_centerInParent="true"/>

                <TextView
                    android:id="@+id/increaseChartQuantity"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/colorButton"
                    android:textSize="14sp"
                    android:layout_alignParentRight="true"/>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>



</RelativeLayout>