<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_gravity="center"
    android:layout_marginBottom="3dp">

    <RelativeLayout
        android:id="@+id/couponCard"
        android:layout_width="match_parent"
        android:background="@drawable/coupon_bg_new"
        android:layout_height="86dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/coupName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="COUPON Chat Time"
                android:textColor="@color/colorButton"
                android:textStyle="bold"
                android:lines="1"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="65dp"
                android:layout_toLeftOf="@+id/imgCard"
                android:textSize="17dp"
                android:layout_alignParentTop="true"
                />

            <TextView
                android:id="@+id/coupValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_marginLeft="65dp"
                android:textSize="40dp"
                android:textColor="@color/colorButton"
                android:gravity="center"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/percentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/coupValue"
                android:layout_marginTop="41dp"
                android:text="%OFF"
                android:textStyle="bold"
                android:textColor="@color/colorButton"
                android:textSize="20dp"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/imgCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="90dp"
                    android:layout_height="63dp"
                    android:src="@drawable/dcrepes"
                    android:scaleType="fitXY"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/coupValid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expires: 23 December 2022"
                android:textSize="8dp"
                android:textColor="@color/textGreyColor"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:layout_centerInParent="true"
                />


        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>