<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:visibility="gone"
        app:queryHint="Search"
        app:queryBackground="@color/colorWhite"
        app:searchIcon="@drawable/ic_search_gray_20dp"
        app:closeIcon="@drawable/ic_close_gray_20dp"
        app:searchHintIcon="@null"
        android:theme="@style/SearchViewTest"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rounded_shape_search"
        android:elevation="5dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/menuScreenRecyclerView"
        android:layout_below="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        />

