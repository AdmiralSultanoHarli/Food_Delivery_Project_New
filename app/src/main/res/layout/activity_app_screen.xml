<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Activity.AppScreenActivity"
    android:background="@drawable/splash">

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="205dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rounded_linear"
        android:weightSum="3"
        android:orientation="vertical">


        <Button
            android:id="@+id/facebookButton"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button_facebook"
            android:drawableLeft="@drawable/facebook20"
            android:drawablePadding="-55dp"
            android:paddingLeft="35dp"
            android:text="Facebook"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="24sp"
            tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/googleButton"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button_google"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="12dp"
            android:text="Google"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textColor="@color/colorWhite"
            android:drawableLeft="@drawable/google20"
            android:paddingLeft="35dp"
            android:drawablePadding="-55dp"
            />

        <Button
            android:id="@+id/emailPhoneButton"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button_email"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="12dp"
            android:text="Email/Phone"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textColor="@color/colorWhite"
            />


    </LinearLayout>



</RelativeLayout>