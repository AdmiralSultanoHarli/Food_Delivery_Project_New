<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="290dp"
    android:layout_height="145dp"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/imgCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="4dp">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_image_corner"
                    android:src="@drawable/beverage"
                    android:scaleType="fitXY"
                    />


            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/foodName"
                android:text="Rice"
                android:textSize="15dp"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="center|left|bottom"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="13dp"
                android:layout_toLeftOf="@+id/imgCard"
                />

            <TextView
                android:id="@+id/foodPrice"
                android:text="Rp 10.000,-"
                android:textSize="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/foodName"
                android:layout_marginLeft="13dp"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/buttonAddPlusMinusChart"
                android:layout_width="75dp"
                android:layout_height="25dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="12dp"
                android:background="@color/colorWhite"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                app:cardCornerRadius="4dp"
                >

                <RelativeLayout
                    android:background="@color/colorWhite"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/decreaseChartQuantity"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:text="-"
                        android:gravity="center"
                        android:textColor="@color/colorButton"
                        android:textSize="14dp"
                        android:layout_alignParentLeft="true"/>

                    <TextView
                        android:id="@+id/chartQuantity"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:textSize="14dp"
                        android:gravity="center"
                        android:layout_centerInParent="true"/>

                    <TextView
                        android:id="@+id/increaseChartQuantity"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="@color/colorButton"
                        android:textSize="14dp"
                        android:layout_alignParentRight="true"/>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>