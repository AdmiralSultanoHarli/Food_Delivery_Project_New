<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_gravity="center"
    android:layout_marginBottom="3dp">

    <RelativeLayout
        android:id="@+id/menuScreen"
        android:layout_width="match_parent"
        android:layout_height="86dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/imgCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp">
        
                <ImageView
                    android:id="@+id/orderFoodImage"
                    android:background="@drawable/rounded_image_corner"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:src="@drawable/maharashtra_thali"
                    android:scaleType="fitXY"
                    />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/orderFoodName"
                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:text="Veg Thali"
                android:textColor="@color/colorBlack"
                android:layout_toRightOf="@+id/imgCard"
                android:layout_marginLeft="10dp"
                android:textSize="17dp"
                android:layout_alignParentTop="true"
                />

            <TextView
                android:id="@+id/foodDescription"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:text="3 puri + 2 vegitable dish + rice + dal + sweet"
                android:layout_toRightOf="@+id/imgCard"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:textSize="11dp"
                android:lines="3"
                android:layout_below="@+id/orderFoodName"/>

            <TextView
                android:id="@+id/orderFoodPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:text="30.000"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                />

            <TextView
                android:id="@+id/orderFoodPriceDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/orderFoodPrice"
                android:layout_alignParentRight="true"
                android:text="20.000"
                android:textSize="12dp"
                android:layout_marginRight="8dp"
                />


            <Button
                android:id="@+id/buttonAddToChart"
                android:visibility="gone"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:foreground="?attr/selectableItemBackground"
                android:background="@drawable/rounded_button_addtochart"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:textAllCaps="false"
                android:text="Add To Cart"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_marginBottom="2dp"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/orderButtonAddPlusMinusChart"
                android:layout_width="75dp"
                android:layout_height="25dp"
                android:background="@color/colorWhite"
                app:cardCornerRadius="4dp"
                app:cardElevation="3dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="2dp"
                android:visibility="gone"
                >

                <RelativeLayout
                    android:background="@color/colorWhite"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/orderDecreaseCartQuantity"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:text="-"
                        android:gravity="center"
                        android:textColor="@color/colorButton"
                        android:textSize="14dp"
                        android:layout_alignParentLeft="true"/>

                    <TextView
                        android:id="@+id/orderCartQuantity"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:textSize="14dp"
                        android:gravity="center"
                        android:layout_centerInParent="true"/>

                    <TextView
                        android:id="@+id/orderIncreaseCartQuantity"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="@color/colorButton"
                        android:textSize="14dp"
                        android:layout_alignParentRight="true"/>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/menuScreen"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="2dp"
        android:background="@color/gray"/>

</RelativeLayout>