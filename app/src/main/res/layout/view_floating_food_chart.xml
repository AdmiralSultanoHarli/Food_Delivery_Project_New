<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/foodChartRelative"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/linear_white_to_transparent"
    android:layout_gravity="center"
    >

        <androidx.cardview.widget.CardView
            android:id="@+id/buttonAddToChartThenOrder"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="6dp"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            app:cardBackgroundColor="@color/colorButton">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/itemCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 item"
                    android:textSize="12sp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/colorWhite"
                    />

                <View
                    android:id="@+id/line"
                    android:layout_toRightOf="@+id/itemCount"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="6dp"
                    android:layout_alignParentTop="true"
                    android:layout_width="2dp"
                    android:layout_height="15dp"
                    android:background="@color/colorWhite"
                    />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="40.000"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/line"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorWhite"/>

                <TextView
                    android:id="@+id/discountPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/line"
                    android:text="55.000"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/price"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/itemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:textSize="12sp"
                    android:textColor="@color/colorWhite"
                    android:text="Butter Chicken"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="6dp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/iconshopwhite"
                    android:layout_marginRight="15dp"
                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


</RelativeLayout>